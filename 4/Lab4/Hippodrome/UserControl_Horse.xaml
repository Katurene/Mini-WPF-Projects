<UserControl x:Class="Hippodrome.UserControl_Horse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hippodrome"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20 px"></RowDefinition><!--для 2х надписей скорость и позиция-->
            <RowDefinition Height="16 px"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock Name="InfoSpeed" FontSize="18" Grid.Row="0"/>
        <TextBlock Name="InfoPosition" FontSize="12" Foreground="Red" Grid.Row="1"/>
        <Image Height="70" Width="100" Source="Resources/horse.jpg" Grid.Row="2" MouseRightButtonDown="Image_MouseRightButtonDown" MouseLeftButtonDown="Image_MouseLeftButtonDown" />


    </Grid>
</UserControl>
